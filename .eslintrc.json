{

    "env": {
        "commonjs": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ],
    "globals": {
        "clearSchedule": "readonly",
        "existsState": "readonly",
        "deleteState":"readonly",
        "getState":"readonly",
        "on": "readonly",
        "getObject":"readonly",
        "setObjectAsync":"readonly",
        "setObject":"readonly",
        "existsObject": "readonly",
        "deleteObjectAsync":"readonly",
        "deleteObject":"readonly",
        "setState":"readonly",
        "setStateAsync":"readonly",
        "createState":"readonly",
        "$": "readonly",
        "messageTo": "readonly",
        "unsubscribe":"readonly",
        "getSubscriptions":"readonly",
        "onMessage":"readonly",
        "onMessageUnregister":"readonly",
        "onLog":"readonly",
        "sendTo":"readonly",
        "scriptName":"readonly",
        "instance":"readonly",
        "getEnums":"readonly",
        "writeFile":"readonly",
        "readFile":"readonly",
        "delFile":"readonly",
        "schedule":"readonly",
        "formatDate":"readonly",
        "log": "readonly"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "project": [
            "./tsconfig.json"
        ]
    },
    "rules": {
        "semi": [ "error", "always", { "omitLastInOneLineBlock": true} ],
        "one-var": "off",
        "space-before-function-paren": ["error", { "anonymous": "never", "named": "never", "asyncArrow": "always" }],
        "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
        "no-useless-escape": "off",
        "no-unused-vars": ["error", { "vars": "local", "varsIgnorePattern":  "^_", "argsIgnorePattern": "^_", "caughtErrorsIgnorePattern": "^ignore"  }],
        "no-fallthrough": ["error", { "commentPattern": "break[\\s\\w]*omitted" }],
        "no-prototype-builtins": "off"
    }
}
